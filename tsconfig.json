{
  "compilerOptions": {
     "module": "esnext",          // 指定生成哪个模块系统代码
    "moduleResolution": "node",   // 使用 Node.js 模块解析策略
    "esModuleInterop": true,      // 允许默认导入
    "skipLibCheck": true,         // 跳过库文件的类型检查
    "resolveJsonModule": true,    // 解析 JSON 文件
    "baseUrl": ".",               // 设置基础路径
    "paths": {
      "@/*": ["src/*"]            // 设置路径别名，确保 'vue-router' 路径正确
    }
  }
}
